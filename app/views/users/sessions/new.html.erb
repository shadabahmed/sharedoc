<% content_for(:box_title) { 'Login' }%>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= flash_messages %>
    <%= f.input :email %>
    <%= f.input :password, :label => "Password #{ devise_mapping.recoverable? && controller_name != 'passwords' ?
            link_to('(forgot password)', new_password_path(resource_name), :tabIndex => '-1') : '' }" %>

  <% if devise_mapping.rememberable? -%>
    <%= f.input :remember_me, :as => :boolean, :wrapper => :checkbox %>
  <% end -%>

    <%= f.button :submit, 'Login' %>
<% end %>

<%= render "links" %>
